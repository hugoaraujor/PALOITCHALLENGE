@model PALOITChallenge.Models.Patient

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label("Illness")
                @Html.DropDownList("IllnessId", @ViewBag.illness as SelectList, "Select Illness ", new { @class = "form-control" })
                <span asp-validation-for="IllnessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Hospital")
                @Html.DropDownList("HospitalName", @ViewBag.hospitals as SelectList, "Select Hospital", new { @class = "form-control" })
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
