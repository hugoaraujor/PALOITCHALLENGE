@model IEnumerable<PALOITChallenge.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

    <h2> @ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Patient</a>
</p>
@{  
    var illnessesLst = ((List<IllnessTableModel>)ViewBag.Illness);
 }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Id Number")
            </th>
            <th>
                @Html.Label("Illness")
            </th>
            <th>
                @Html.Label("Hospital")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>

                @item.Id
            </td>
            <td>

                @illnessesLst.Where(p => p.IllnessId == @item.IllnessId).First().Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
           
            </td>
        </tr>
}
    </tbody>
</table>
