@model PALOITChallenge.Models.IllnessTableModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editing</h2>

<h4>Disease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IllnessId" />

            <div class="form-group">
                <label asp-for="IllnessId" class="control-label"></label>
                <input asp-for="IllnessId" class="form-control" readonly />                                                              
                <span asp-validation-for="IllnessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"  readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="painLevel" class="control-label"></label>
                @Html.DropDownList("painLevel", Html.GetEnumSelectList<PainLevels>(), "Select Pain Level", new { @class = "form-control" })
               </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
